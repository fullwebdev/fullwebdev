{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": [
      "node",
      "puppeteer",
      "jest",
      "expect-puppeteer",
      "jest-environment-puppeteer"
    ]
  },
  "include": ["./jest-globals.d.ts", "./**/*.jest.js"]
}
