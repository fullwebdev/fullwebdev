{
  "name": "fullwebdev",
  "version": "1.0.1",
  "private": true,
  "description": "A transverse vision of modern web development",
  "license": "MIT",
  "packageManager": "yarn@3.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fullwebdev/fullwebdev"
  },
  "author": "Noël Macé",
  "homepage": "https://github.com/fullwebdev/fullwebdev",
  "scripts": {
    "start": "yarn workspace @fullweb/website start",
    "==i==": "============================ install ==========================",
    "prepack": "yarn run setup",
    "postinstall": "yarn run setup && pip install -r py-requirements.txt",
    "setup": "run-s setup:ts-configs types",
    "setup:ts-configs": "run-s setup:ts-configs:run setup:ts-configs:format",
    "setup:ts-configs:run": "node scripts/generate-ts-configs.mjs",
    "setup:ts-configs:format": "prettier \"./**/tsconfig{.doc,}.json\" --write",
    "==v==": "=========================== validation ========================",
    "validate": "run-s test types lint",
    "test": "run-s test:node test:web test:website",
    "test:node": "mocha \"packages/*/*/test-node/**/*.test.{ts,js,mjs,cjs}\" --timeout 5000 --reporter dot --exit",
    "test:node:watch": "yarn run test:node --watch --parallel",
    "test:web": "web-test-runner",
    "test:website": "run-s 'test:website:!(e2e)'",
    "test:website:app": "yarn workspace @fullweb/website run test:app",
    "test:website:functions": "firebase emulators:exec --project=dev --only functions 'cd website/functions && yarn run test'",
    "test:website:e2e": "playwright test",
    "types": "run-s types:clear types:copy types:build",
    "types:build": "tsc --build",
    "types:clear": "rimraf ./packages/**/types",
    "types:copy": "yarn workspaces foreach run types:copy",
    "lint": "run-s lint:es lint:md lint:prettier ",
    "lint:md": "markdownlint .",
    "lint:prettier": "yarn run prettier --check",
    "lint:es": "eslint --ext .js,.html,.ts,.jsx,.tsx,.mjs,.cjs,.vue .",
    "format": "run-s format:es format:md format:prettier ",
    "format:md": "yarn run lint:md --fix",
    "format:prettier": "yarn run prettier --write",
    "format:es": "yarn run lint:es --fix",
    "prettier": "prettier \"./**/*.{js,css,ts,mjs,cjs,jsx,tsx,html,yml,vue,styl,md,json}\" --check",
    "==b==": "============================= build ===========================",
    "build": "run-s prepare-root build:root",
    "build:root": "bash scripts/build.sh -f",
    "prepare-root": "run-s prepare-website prepare-functions",
    "build:illustrations": "yarn workspace @fullweb/illustrations run build",
    "build:website": "run-s prepare-website build:website:run",
    "build:website:run": "yarn workspace @fullweb/website run build && copyfiles -u 2 \"website/dist/**/*\" ./dist/",
    "prepare-website": "run-s build:illustrations build:daucus:typedoc-theme docs:api && yarn run cp-website-assets",
    "prepare-functions": "copyfiles -u 2 \"website/src/app/**/*.js\" ./website/functions/",
    "cp-website-assets": "bash scripts/cp-assets.sh",
    "build:eni-dpawm": "yarn run build:illustrations && rimraf ./dpawm-build/public/ && yarn workspace @fullweb/eni-dpawm run build:web&& mv ./materials/eni-dpawm/dist ./dpawm-build/public",
    "prepare-eni-dpawm": "yarn run build:illustrations",
    "build:code-samples:index": "yarn workspace @fullweb/code-samples run build:index",
    "build:daucus:typedoc-theme": "yarn workspace @daucus/typedoc-theme run build",
    "build:daucus:config-schema": "run-s build:daucus:config-schema:run build:daucus:config-schema:format",
    "build:daucus:config-schema:run": "typescript-json-schema packages/daucus/cli/src/config/DaucusJSONConfig.d.ts DaucusJSONConfig -o packages/daucus/cli/daucus-config.schema.json",
    "build:daucus:config-schema:format": "prettier --write packages/daucus/cli/daucus-config.schema.json",
    "serve": "firebase emulators:start",
    "docs": "run-s docs:**",
    "docs:api": "node ./scripts/typedoc.mjs",
    "docs:ce": "run-s docs:ce:**",
    "docs:ce:daucus:router": "run-s docs:ce:daucus:router:run docs:ce:daucus:router:format",
    "docs:ce:daucus:router:run": "wca analyze packages/daucus/router/src/DaucusRouterWC.js --format json --outFile packages/daucus/router/custom-elements.json",
    "docs:ce:daucus:router:format": "prettier --write packages/daucus/router/custom-elements.json",
    "docs:ce:daucus:menu": "run-s docs:ce:daucus:menu:run docs:ce:daucus:menu:format",
    "docs:ce:daucus:menu:run": "wca analyze packages/daucus/menu/src/DaucusMenu.js --format json --outFile packages/daucus/menu/custom-elements.json",
    "docs:ce:daucus:menu:format": "prettier --write packages/daucus/menu/custom-elements.json",
    "docs:ce:daucus:html-loader": "run-s docs:ce:daucus:html-loader:run docs:ce:daucus:html-loader:format",
    "docs:ce:daucus:html-loader:run": "wca analyze packages/daucus/html-loader/src/HtmlLoader.js --format json --outFile packages/daucus/html-loader/custom-elements.json",
    "docs:ce:daucus:html-loader:format": "prettier --write packages/daucus/html-loader/custom-elements.json",
    "/* ce:docs */": "see https://github.com/runem/web-component-analyzer/issues/138",
    "ce:docs": "run-s ce:docs:**",
    "ce:docs:daucus:router": "wca src packages/daucus/router/src/DaucusRouterWC.js --silent --markdown.headerLevel 3 >> packages/daucus/router/README.md",
    "ce:docs:daucus:menu": "wca src packages/daucus/menu/src/DaucusMenu.js --silent --markdown.headerLevel 3 >> packages/daucus/menu/README.md",
    "ce:docs:daucus:html-loader": "wca src packages/daucus/html-loader/src/HtmlLoader.js --silent --markdown.headerLevel 3 >> packages/daucus/html-loader/README.md",
    "==c==": "========================= CI & releases =======================",
    "release": "standard-version",
    "release:test": "standard-version --dry-run",
    "release:helpers": "cd packages/helpers && standard-version",
    "release:daucus": "cd packages/daucus && standard-version",
    "release:wof-slides": "cd materials/slides/wof-2 && standard-version",
    "release:vanilla-slides": "cd materials/slides/vanilla-1 && standard-version",
    "release:custom-element-name": "cd packages/custom-element-name && standard-version",
    "update-subtrees": "monocli update",
    "lhci": "yarn run lhci:collect && yarn run lhci:assert; yarn run lhci:open",
    "lhci:collect": "lhci collect --config lighthouserc.local.js",
    "lhci:assert": "lhci assert --config lighthouserc.local.js",
    "lhci:open": "lhci open",
    "lhci:autorun": "lhci autorun",
    "==d==": "============================= dev =============================",
    "grammar": "bash scripts/grammar.sh",
    "commit": "commit"
  },
  "dependencies": {
    "@daucus/typedoc-theme": "workspace:*",
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/prompt-cli": "^17.3.0",
    "@daucus/pandoc": "workspace:*",
    "@lhci/cli": "~0.10.0",
    "@modern-helpers/router": "*",
    "@monocli/cli": "^0.5.0",
    "@open-wc/eslint-config": "^9.0.0",
    "@open-wc/testing": "~3.1.7",
    "@playwright/test": "^1.28.1",
    "@types/html-minifier": "^4.0.2",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@web/test-runner": "^0.15.0",
    "@web/test-runner-playwright": "^0.9.0",
    "chai": "^4.3.7",
    "chai-fs": "^2.0.0",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "detect-indent": "^7.0.1",
    "detect-newline": "^4.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-vue": "^9.8.0",
    "firebase-tools": "^11.16.1",
    "http-server": "^14.1.1",
    "husky": "^4.3.8",
    "lint-staged": "^13.0.4",
    "lit": "~2.4.1",
    "local-web-server": "^5.2.1",
    "markdownlint-cli": "~0.32.2",
    "mocha": "^10.1.0",
    "mock-fs": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "sinon": "^15.0.0",
    "sinon-chai": "^3.7.0",
    "standard-version": "^9.5.0",
    "stringify-package": "^1.0.1",
    "typedoc": "0.23.21",
    "typedoc-plugin-markdown": "3.13.6",
    "typescript": "4.9.3",
    "typescript-json-schema": "^0.55.0",
    "web-component-analyzer": "^1.1.6"
  },
  "workspaces": [
    "dpawm-build",
    "materials/code-samples",
    "materials/codelabs",
    "materials/illustrations",
    "materials/perf",
    "materials/slides/*",
    "packages/helpers",
    "packages/helpers/el",
    "packages/helpers/router",
    "packages/helpers/template",
    "packages/daucus/*",
    "packages/custom-element-name",
    "website",
    "website/functions",
    "demos/*/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --write",
      "markdownlint --fix"
    ],
    "*.{css,yml,json}": [
      "prettier --write"
    ],
    "*.{js,html,ts,tsx,jsx,mjs,cjs,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
