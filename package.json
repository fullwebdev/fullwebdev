{
  "name": "fullwebdev",
  "version": "1.0.0-alpha.1",
  "private": true,
  "description": "A transverse vision of modern web development",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fullwebdev/fullwebdev"
  },
  "author": "Noël Macé",
  "homepage": "https://github.com/fullwebdev/fullwebdev",
  "scripts": {
    "start": "lerna run start --scope=@fullweb/website",
    "==i==": "============================ install ==========================",
    "postinstall": "lerna bootstrap && pip install -r py-requirements.txt && npm run setup",
    "setup": "npm run setup:ts-configs",
    "setup:ts-configs": "node scripts/generate-ts-configs.mjs",
    "postsetup:ts-configs": "prettier \"./**/tsconfig.json\" --write",
    "==v==": "=========================== validation ========================",
    "validate": "run-s test types lint",
    "test": "npm run test:node && npm run test:web",
    "test:node": "mocha \"packages/*/*/test-node/**/*.test.{ts,js,mjs,cjs}\" --timeout 5000 --reporter dot --exit",
    "test:node:watch": "npm run test:node -- --watch --parallel",
    "test:web": "web-test-runner",
    "types": "run-s types:clear types:copy types:build",
    "types:build": "tsc --build",
    "types:clear": "rimraf packages/*/types/ && rimraf packages/*/*/types/",
    "types:copy": "lerna run types:copy",
    "lint": "run-s lint:es lint:md lint:prettier ",
    "lint:md": "markdownlint .",
    "lint:prettier": "npm run prettier -- --check",
    "lint:es": "eslint --ext .js,.html,.ts,.jsx,.tsx,.mjs,.cjs,.vue .",
    "format": "run-s format:es format:md format:prettier ",
    "format:md": "npm run lint:md -- --fix",
    "format:prettier": "npm run prettier -- --write",
    "format:es": "npm run lint:es -- --fix",
    "prettier": "prettier \"./**/*.{js,css,ts,mjs,cjs,jsx,tsx,html,yml,vue,styl,md,json}\" --check",
    "==b==": "============================= build ===========================",
    "build": "bash scripts/build.sh -f",
    "prebuild": "npm run prebuild:website",
    "build:illustrations": "lerna run build --scope=@fullweb/illustrations",
    "build:website": "lerna run build --scope=@fullweb/website && copyfiles -u 2 \"website/dist/**/*\" ./dist/",
    "postbuild:website": "npm run minify",
    "prebuild:website": "npm run build:illustrations && bash scripts/cp-assets.sh",
    "build:eni-dpawm": "rimraf ./livre-build/public/ && lerna run build:web --scope=@fullweb/eni-dpawm && mv ./materials/eni-dpawm/dist ./livre-build/public",
    "prebuild:eni-dpawm": "npm run build:illustrations",
    "build:code-samples:index": "lerna run build:index --scope=@fullweb/code-samples",
    "serve": "firebase emulators:start",
    "==c==": "========================= CI & releases =======================",
    "release": "standard-version",
    "release:test": "standard-version --dry-run",
    "release:helpers": "cd packages/helpers && standard-version",
    "release:wof-slides": "cd materials/slides/wof-2 && standard-version",
    "release:vanilla-slides": "cd materials/slides/vanilla-1 && standard-version",
    "update-subtrees": "monocli update",
    "lhci": "npm run lhci:collect && npm run lhci:assert; npm run lhci:open",
    "lhci:collect": "lhci collect --config lighthouserc.local.js",
    "lhci:assert": "lhci assert --config lighthouserc.local.js",
    "lhci:open": "lhci open",
    "==d==": "============================= dev =============================",
    "grammar": "bash scripts/grammar.sh",
    "commit": "commit",
    "lerna": "lerna",
    "l": "lerna run"
  },
  "dependencies": {
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.1",
    "@commitlint/prompt-cli": "^9.1.1",
    "@daucus/pandoc": "./packages/daucus/pandoc/",
    "@lhci/cli": "^0.5.0",
    "@monocli/cli": "^0.5.0",
    "@open-wc/eslint-config": "^4.2.0",
    "@open-wc/testing": "^2.5.32",
    "@types/html-minifier": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "@web/test-runner": "^0.12.7",
    "@web/test-runner-playwright": "^0.8.1",
    "chai": "^4.2.0",
    "chai-fs": "^2.0.0",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-vue": "^7.5.0",
    "firebase-tools": "^9.3.0",
    "http-server": "^0.12.3",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "lit-html": "^1.3.0",
    "local-web-server": "^4.2.1",
    "markdownlint-cli": "~0.23.2",
    "mocha": "^8.2.1",
    "mock-fs": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^2.6.3",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "standard-version": "^8.0.2",
    "typescript": "^4.1.3",
    "vuepress-bar": "^0.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --write",
      "markdownlint --fix"
    ],
    "*.{css,yml,json}": [
      "prettier --write"
    ],
    "*.{js,html,ts,tsx,jsx,.mjs,.cjs,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
