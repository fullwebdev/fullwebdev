{
  "name": "fullwebdev",
  "version": "0.5.0-beta.2",
  "private": true,
  "description": "A transverse vision of modern web development",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fullwebdev/fullwebdev"
  },
  "author": "Noël Macé",
  "homepage": "https://github.com/fullwebdev/fullwebdev",
  "scripts": {
    "lint": "prettier --write \"./**/*.{js,css,ts,jsx,tsx,html,yml,vue,styl,md}\" && markdownlint . --fix",
    "pretty": "prettier --write \"./**/*.{js,css,ts,jsx,tsx,html,yml,vue,styl,md}\"",
    "grammar": "bash scripts/grammar.sh",
    "postinstall": "lerna bootstrap",
    "release": "standard-version",
    "release:test": "standard-version --dry-run",
    "postrelease": "git push --follow-tags",
    "start": "lerna run start --scope=@fullwebdev/docs",
    "build:docs": "bash scripts/build.sh -f",
    "serve:docs": "http-server dist -o",
    "build:illustrations": "lerna run build --scope=@fullwebdev/illustrations",
    "prebuild:livre": "npm run build:illustrations",
    "build:livre": "lerna run build --scope=@fullwebdev/livre-fr",
    "build:code-samples:index": "lerna run build:index --scope=@fullwebdev/code-samples",
    "commit": "commit",
    "lerna": "lerna",
    "l": "lerna run"
  },
  "devDependencies": {
    "lerna": "^3.21.0",
    "standard-version": "^8.0.0",
    "http-server": "^0.12.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt-cli": "^8.3.5",
    "concurrently": "^5.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.4",
    "markdownlint-cli": "~0.23.1",
    "@monocli/cli": "^0.5.0-beta.2",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build:code-samples:index && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --write",
      "markdownlint --fix"
    ],
    "*.{js,css,ts,jsx,tsx,html,yml,vue,styl}": [
      "prettier --write"
    ]
  }
}
