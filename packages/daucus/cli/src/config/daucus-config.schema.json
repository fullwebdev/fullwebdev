{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ProjectConfig": {
      "properties": {
        "compiler": {
          "anyOf": [
            {
              "enum": ["pandoc", "snarkdown"],
              "type": "string"
            },
            {
              "type": "object"
            }
          ],
          "description": "Specify which converter to use.\nSee the defaultCompiler global option for more details."
        },
        "root": {
          "description": "The root of the source files.",
          "type": "string"
        },
        "src": {
          "description": "Globby glob pattern matching the source files (default: ).",
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "properties": {
    "defaultCompiler": {
      "anyOf": [
        {
          "enum": ["pandoc", "snarkdown"],
          "type": "string"
        },
        {
          "type": "object"
        }
      ],
      "description": "Default converter used for every project.\nBy default, 'pandoc' will be used if @daucus/pandoc was installed, or 'snarkdown' if it wasn't."
    },
    "htmlMinifierOptions": {
      "description": "custom html-minifier options (see: https://www.npmjs.com/package/html-minifier#options-quick-reference)"
    },
    "i18n": {
      "description": "Enable internationalization.",
      "type": "boolean"
    },
    "output": {
      "description": "The root of the generated files (default: \"_daucus_\")",
      "type": "string"
    },
    "projects": {
      "additionalProperties": {
        "$ref": "#/definitions/ProjectConfig"
      },
      "description": "Daucus projects config (default: { \"docs\": {src: \"**\\/*.md\", root: \"docs\"}})",
      "type": "object"
    }
  },
  "type": "object"
}
