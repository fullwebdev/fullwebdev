{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ProjectConfig": {
      "properties": {
        "compiler": {
          "anyOf": [
            {
              "enum": ["pandoc", "snarkdown"],
              "type": "string"
            },
            {
              "type": "object"
            }
          ],
          "description": "Specify which converter to use.\nSee the defaultCompiler global option for more details."
        },
        "exclude": {
          "default": ["**/node_modules/**"],
          "description": "Glob patterns to exclude matches.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "root": {
          "description": "The root of the source files.",
          "type": "string"
        },
        "src": {
          "description": "Glob pattern matching the source files.",
          "type": "string"
        },
        "usePathAsTitle": {
          "description": "Use file name as menu title instead of first h1",
          "type": "boolean"
        }
      },
      "type": "object"
    }
  },
  "properties": {
    "defaultCompiler": {
      "anyOf": [
        {
          "enum": ["pandoc", "snarkdown"],
          "type": "string"
        },
        {
          "type": "object"
        }
      ],
      "description": "Default converter used for every project.\nBy default, 'pandoc' will be used if @daucus/pandoc was installed, or 'snarkdown' if it wasn't."
    },
    "htmlMinifierOptions": {
      "description": "custom html-minifier options"
    },
    "i18n": {
      "default": false,
      "description": "Enable internationalization.",
      "type": "boolean"
    },
    "output": {
      "default": "_daucus_",
      "description": "The root of the generated files",
      "type": "string"
    },
    "projects": {
      "additionalProperties": {
        "$ref": "#/definitions/ProjectConfig"
      },
      "default": "{ docs: { src: \"**\\/*.md\", root: \"docs\" } }",
      "description": "Daucus projects config",
      "type": "object"
    }
  },
  "type": "object"
}
