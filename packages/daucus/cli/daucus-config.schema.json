{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "CompilerId": {
      "description": "Compiler id used to load the associated {@link FunctionCompiler}",
      "enum": ["pandoc", "snarkdown"],
      "type": "string"
    },
    "GenericOptionsObj": {
      "additionalProperties": {
        "anyOf": [
          {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          {
            "$ref": "#/definitions/GenericOptionsObj"
          },
          {
            "type": ["string", "number", "boolean"]
          }
        ]
      },
      "type": "object"
    },
    "ProjectJSONConfig": {
      "properties": {
        "compiler": {
          "$ref": "#/definitions/CompilerId",
          "description": "Specify which converter to use."
        },
        "compilerOptions": {
          "$ref": "#/definitions/GenericOptionsObj",
          "description": "Options passed to the compiler."
        },
        "exclude": {
          "default": ["**/node_modules/**"],
          "description": "Glob patterns to exclude matches.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "reverseMenu": {
          "description": "Reverse menu entries.",
          "type": "boolean"
        },
        "root": {
          "description": "The root of the source files.",
          "type": "string"
        },
        "src": {
          "description": "Glob pattern matching the source files.",
          "type": "string"
        },
        "usePathAsTitle": {
          "description": "Use file name as menu title instead of first h1",
          "type": "boolean"
        }
      },
      "type": "object"
    }
  },
  "properties": {
    "defaultCompiler": {
      "$ref": "#/definitions/CompilerId",
      "description": "Default converter used for every project.\n\nBy default, 'pandoc' will be used if @daucus/pandoc was installed, or 'snarkdown' if it wasn't."
    },
    "defaultCompilerOptions": {
      "$ref": "#/definitions/GenericOptionsObj",
      "description": "Options passed to the compiler by default."
    },
    "htmlMinifierOptions": {
      "$ref": "#/definitions/GenericOptionsObj",
      "description": "Custom html-minifier options."
    },
    "i18n": {
      "default": false,
      "description": "Enable internationalization.",
      "type": "boolean"
    },
    "output": {
      "default": "_daucus_",
      "description": "The root of the generated files",
      "type": "string"
    },
    "projects": {
      "additionalProperties": {
        "$ref": "#/definitions/ProjectJSONConfig"
      },
      "default": {
        "docs": {
          "root": "docs",
          "src": "**/*.md"
        }
      },
      "description": "Daucus projects config",
      "type": "object"
    }
  },
  "type": "object"
}
