{
  "functions": {
    "source": "./website/functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "i18n": {
      "root": "/localized-files"
    }
  }
}
