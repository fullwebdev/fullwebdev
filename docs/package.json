{
  "name": "@fullweb/docs",
  "version": "0.8.0",
  "private": true,
  "scripts": {
    "build": "npm run build:md && npm run build:pack",
    "build:all": "npm run build:all-pkgs && npm run build:pack",
    "prebuild:md": "rimraf views",
    "build:md": "node _scripts_/main.js",
    "build:all-pkgs": "npm run build:md -- --livre --materials",
    "build:pack": "snowpack build",
    "start:md": "npm run build:md -- --watch",
    "start": "concurrently \"npm:start:md\" \"npm:start:server\"",
    "start:all-pkgs": "npm run build:md -- --watch --livre --materials",
    "start:all": "concurrently \"npm:start:all-pkgs\" \"npm:start:server\"",
    "start:server": "snowpack dev",
    "start:build:server": "ws --spa index.html -d build --http2 --compress",
    "start:build": "npm run build && npm run start:build:server",
    "lint": "eslint \"{pages,js,components}/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullwebdev/fullwebdev.git"
  },
  "author": "Noel Mac√©",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fullwebdev/fullwebdev/issues"
  },
  "devDependencies": {
    "@snowpack/plugin-build-script": "^2.0.2",
    "chokidar": "^3.4.1",
    "commander": "^6.0.0",
    "concurrently": "^5.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.6.0",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-import": "^2.22.0",
    "local-web-server": "^4.2.1",
    "minify-html-literals": "^1.3.1",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "rimraf": "^2.6.3",
    "snowpack": "^2.7.5"
  },
  "dependencies": {
    "lit-html": "^1.2.1",
    "prismjs": "^1.20.0"
  }
}
